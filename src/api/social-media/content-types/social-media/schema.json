{
  "kind": "collectionType",
  "collectionName": "social_medias",
  "info": {
    "singularName": "social-media",
    "pluralName": "social-medias",
    "displayName": "SocialMedia"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "thumbnail": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "link": {
      "type": "string",
      "regex": "^((https?|ftp|smtp):\\/\\/)?(www.)?[a-z0-9]+\\.[a-z]+(\\/[a-zA-Z0-9#]+\\/?)*$"
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "INSTAGRAM",
        "FACEBOOK",
        "YOUTUBE",
        "TWITTER",
        "OTHERS"
      ]
    }
  }
}
